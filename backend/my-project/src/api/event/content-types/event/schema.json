{
    "kind": "collectionType",
    "collectionName": "events",
    "info": {
        "singularName": "event",
        "pluralName": "events",
        "displayName": "Event"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "start": {
            "type": "datetime",
            "required": true
        },
        "end": {
            "type": "datetime"
        },
        "venue": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::location.location",
            "inversedBy": "events"
        },
        "description": {
            "type": "richtext"
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "required": false
        },
        "rsvpEnabled": {
            "type": "boolean",
            "default": true
        },
        "capacity": {
            "type": "integer"
        }
    }
}