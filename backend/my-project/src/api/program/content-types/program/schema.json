{
  "kind": "collectionType",
  "collectionName": "programs",
  "info": {
    "singularName": "program",
    "pluralName": "programs",
    "displayName": "Program"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "minLength": 5,
      "required": true,
      "unique": true,
      "regex": "[a-z\\-]+"
    },
    "summary": {
      "type": "text"
    },
    "body": {
      "type": "richtext",
      "required": false
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "programs"
    },
    "story_impacts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::story-impact.story-impact",
      "mappedBy": "program"
    },
    "partners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::partner.partner",
      "mappedBy": "programs"
    }
  }
}